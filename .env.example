# Core provider
LLM_PROVIDER=HF  # HF | OPENAI | OLLAMA

# HF models (default free)
HF_LLM_MODEL=google/flan-t5-small
HF_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# OpenAI (if used)
# OPENAI_API_KEY=sk-...
LLM_MODEL=gpt-4o-mini
EMBED_MODEL_OPENAI=text-embedding-3-small

# Ollama (self-hosted)
OLLAMA_LLM_MODEL=tinyllama
OLLAMA_EMBED_MODEL=nomic-embed-text

# Vector stores
CHROMA_DIR_MAIN=/tmp/chroma_main
CHROMA_DIR_ALT=/tmp/chroma_alt

# Retrieval
RETRIEVER_K=3
RETRIEVER_SCORE_THRESHOLD=0.3

# Environment
ENV=development  # production|staging|development

# API / Security
ALLOWED_ORIGINS=https://your-frontend.example.com
API_KEYS=change-me
API_KEY_CLIENT_MAP=key1:clientA,clientB;key2:clientC

# Rate limiting
RATE_LIMIT_KEY=ip  # ip|apikey
RATE_LIMIT_RULE=60/minute
REDIS_URL=redis://localhost:6379

# Observability
# SENTRY_DSN=https://<key>@sentry.io/<project>
# SENTRY_TRACES_SAMPLE_RATE=0.1